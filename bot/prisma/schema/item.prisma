model Item {
  id          String   @id @default(cuid())
  name        String
  description String
  type        ItemType
  rarity      Rarity   @default(COMMON)
  effects     Json
  createdAt   DateTime @default(now())

  characterItems CharacterItem[]

  @@map("items")
}

enum ItemType {
  EQUIPMENT
  CONSUMABLE
  TRAINING
  SPECIAL
}

enum Rarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
}
