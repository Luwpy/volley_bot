model Technique {
  id                String   @id @default(cuid())
  name              String   @unique
  description       String
  category          TechniqueType
  difficulty        Int
  requiredLevel     Int      @default(1)
  requiredPower     Int      @default(0)
  requiredSpeed     Int      @default(0)
  requiredTechnique Int      @default(0)
  requiredJump      Int      @default(0)
  requiredMental    Int      @default(0)
  allowedPositions  Position[]
  effects           Json
  createdAt         DateTime @default(now())

  characterTechniques CharacterTechnique[]

  @@map("techniques")
}

enum TechniqueType {
  ATTACK
  SERVE
  BLOCK
  RECEIVE
  SET
  SPECIAL
}
